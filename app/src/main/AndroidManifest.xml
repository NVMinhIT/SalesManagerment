<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.salesmanagerment">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".screen.Invoice.InvoiceActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".screen.infoapp.profile_user.ProfileUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.sales.createorder.CreateOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.sales.chooseinventoryitem.ChooseInventoryItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.authentication.changepassword.ChangePassActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.authentication.login.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".screen.sales.customer.choosecustomer.ListCustomerActivity"></activity>
        <activity
            android:name=".screen.main.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.infoapp.InfoAppActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.sales.choosetable.OptionTableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screen.splash.SplashActivity"
            android:screenOrientation="portrait">

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->


            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
    </application>

</manifest>