<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonCalculator">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="TextViewNormalBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>

    <style name="TextViewNormal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorTextDarkGray</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>
</resources>
