            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginBottom="@dimen/margin_6"
            android:padding="@dimen/padding_6">

            <TextView
                android:id="@+id/tv_account_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_account_dish_order"
                android:text="@string/account"
                android:textSize="@dimen/text_14"
                android:textStyle="italic"
                tools:ignore="MissingConstraints,RtlHardcoded" />

            <TextView
                android:id="@+id/tv_account_dish_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_16"
                android:background="#EEEEEE"
                android:text="45454545"
                android:textColor="@color/colorBlueHighLight"
                android:textSize="@dimen/text_14"
                android:textStyle="italic"
                app:layout_constraintLeft_toRightOf="@id/tv_account_dish"
                tools:ignore="MissingConstraints" />

