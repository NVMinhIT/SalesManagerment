<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/content_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:text="@string/doimk"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_20"

                />

            <ImageButton
                android:id="@+id/btn_back_logout"
                android:layout_width="@dimen/size_38"
                android:layout_height="@dimen/size_38"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_12"
                android:background="@null"
                android:padding="@dimen/padding_8"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_48"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_title"
            tools:ignore="UselessLeaf">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_12"
                android:text="@string/matkhauhientai"
                android:textColor="@color/text"
                android:textSize="@dimen/text_18" />

            <EditText
                android:id="@+id/edtOldPassWord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginEnd="@dimen/margin_12"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/matkhauhientai"
                android:inputType="text"
                android:paddingLeft="@dimen/padding_12"
                android:textColor="@color/text"
                android:textSize="@dimen/text_16"
                tools:ignore="Autofill,LabelFor,RtlHardcoded,RtlSymmetry,TextFields" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/passwordnew"
                android:textColor="@color/text"
                android:textSize="@dimen/text_18" />

            <!--            <EditText-->
            <!--                android:id="@+id/edtNewPassWord"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/size_48"-->
            <!--                android:layout_marginStart="@dimen/margin_12"-->
            <!--                android:layout_marginTop="@dimen/margin_16"-->
            <!--                android:layout_marginEnd="@dimen/margin_12"-->
            <!--                android:background="@drawable/custom_edit_text"-->
            <!--                android:hint="@string/password"-->
            <!--            android:textSize="@dimen/text_16"-->
            <!--                android:inputType="text"-->
            <!--                android:paddingLeft="@dimen/padding_12"-->
            <!--                android:textColor="@color/text"-->
            <!--                tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                app:errorTextColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginRight="12dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNewPassWord"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/passwordnew"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edit_text"
                    android:inputType="textPassword"
                    android:textColorHint="@color/text"
                    android:paddingStart="@dimen/padding_12"
                    android:singleLine="true"
                    android:textSize="@dimen/text_16"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/passwordnewagain"
                android:textColor="@color/text"
                android:textSize="@dimen/text_18" />

<!--            <EditText-->
<!--                android:id="@+id/edtNewPassWordAgain"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/size_48"-->
<!--                android:layout_marginStart="@dimen/margin_12"-->
<!--                android:layout_marginTop="@dimen/margin_16"-->
<!--                android:layout_marginEnd="@dimen/margin_12"-->
<!--                android:background="@drawable/custom_edit_text"-->
<!--                android:hint="@string/password1"-->
<!--                android:inputType="text"-->
<!--                android:paddingLeft="@dimen/padding_12"-->
<!--                android:textColor="@color/text"-->
<!--                android:textSize="@dimen/text_16"-->
<!--                tools:ignore="Autofill,RtlHardcoded,RtlSymmetry,TextFields" />-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="@dimen/margin_16"
                app:errorTextColor="@color/colorPrimaryDark"
                android:layout_marginRight="12dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNewPassWordAgain"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edit_text"
                    android:inputType="textPassword"
                    android:textColorHint="@color/text"
                    android:paddingStart="@dimen/padding_12"
                    android:singleLine="true"
                    android:textSize="@dimen/text_16"
                    tools:ignore="RtlSymmetry" />

            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnChangePass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginStart="@dimen/margin_12"
                android:layout_marginTop="@dimen/margin_22"
                android:layout_marginEnd="@dimen/margin_12"
                android:layout_marginBottom="@dimen/margin_12"
                android:background="@drawable/custom_button"
                android:inputType="textCapCharacters"
                android:text="@string/doimk"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_18"
                tools:ignore="TextViewEdits" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>